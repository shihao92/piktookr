<h1>Registrations</h1>

<div class="container">
  <div class="row">
    <ul class="breadcrumb">
      <li><a href="/app/dashboard">Dashboard</a></li>
      <li>Registration</li>
    </ul>
  </div>
  <div class="row">
    <h2>Registration</h2>
    <%= form_for @user, url: { action: "create_member" } do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :status %><br />
        <%= f.text_field :status, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :avatar %><br />
        <%= f.file_field :avatar, class: "form-control" %>
      </div>

      <% roles_array = OkrRole.all.map { |role| [role.name, role.id] } %>
      <div class="form-group">
        <%= f.label :role %><br />
        <%= select("role", "role_id", roles_array, {include_blank: false}, {class: 'form-control'}) %>
      </div>
      
      <div class="form-group">
        <div class="text-right">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>



<%= link_to 'Back', users_path %>

<!--Page specific script-->
<script src="/dist/dashboard-webpack.js"></script>