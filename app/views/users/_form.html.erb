<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :status %><br />
    <%= f.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <% roles_array = OkrRole.all.map { |role| [role.name, role.id] } %>
  <div class="form-group">
    <%= f.label :role %><br />
    <%= select("role", "role_id", roles_array, {include_blank: false}, {class: 'form-control'}) %>
  </div>

  <% teams_array = OkrTeam.all.map { |team| [team.name, team.id] } %>
  <div class="form-group">
    <%= f.label :team %><br />
    <%= select("team", "team_id", teams_array, {include_blank: false}, {class: 'form-control'}) %>
  </div>
  
  <div class="form-group">
    <div class="text-right">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>



