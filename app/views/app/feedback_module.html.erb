              <td>
                <%= item.content %>
              </td>
              <td>
                <% user = User.select("email").find(item.user_id) %>
                <%= user.email %>
              </td>
              <td>
                <!--<span class="col-md-6 col-sm-6">
                  <a name="link_reply_feedback" data-id="<%= item.id %>">
                    <i class="fa fa-fw fa-pencil"></i> Reply
                  </a>
                </span>-->
                <span class="col-md-6 col-sm-6">
                  <a name="link_delete_feedback" data-id="<%= item.id %>">
                    <i class="fa fa-fw fa-pencil"></i> Delete
                  </a>
                </span>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
