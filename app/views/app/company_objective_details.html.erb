<!-- START CONTAINER FLUID -->
<div id="page_company_objective_details" class="bg-master-lighter" data-id="<%= @company_objective.id %>">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-8 col-md-8 col-sm-8">
        <h3 class="semi-bold">
          <%= @company_objective.objective %>
        </h3>
        <br/>
        <span class="okr-details-header-info">
          <i class="glyphicon glyphicon-user fa-lg"></i>
          <span class="label-font">
            <%= @user_info.last_name %> <%= @user_info.first_name %>
          </span>
        </span>
        <span class="okr-details-header-info">
          <i class="glyphicon glyphicon-calendar fa-lg"></i>
          <span class="label-font">
            <%= @timeframe_log.quarter %>
          </span>
        </span>
        <br />
        <br />
        <hr />
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="pull-right padding-body">
          <div class="c100 p70">
            <span>
              <span id="okr_aligned_percentage"><%= @remaining_quarter_days.to_i %></span> <br/>
              <p>days left</p>
            </span>
            <div class="slice">
              <div class="bar"></div>
              <div class="fill"></div>
            </div>
          </div>
          <div class="c100 p<%= @company_objective.progress.to_i %>">
            <span>
              <span id="okr_aligned_percentage"><%= @company_objective.progress.to_i %>%</span> <br/>
              <p>progress</p>
            </span>
            <div class="slice">
              <div class="bar"></div>
              <div class="fill"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br />
    <div class="row">
      <div class="col-lg-7 col-md-7 col-sm-7">
        <h4 class="semi-bold">Timeline</h4>
        <div class="top-circle">
          <section class="timeline">
            <% @log.each do |item| %>
              <div class="timeline-block">
                <div class="timeline-point complete">
                  <% if item.log_content.include? "Created" %>
                  <i class="pg-lock"></i>
                  <% elsif item.log_content.include? "Contributed" %>
                  <i class="pg-arrow_up"></i>
                  <% elsif item.log_content.include? "Renamed" %>
                  <i class="pg-settings"></i>
                  <% end %>
                </div>
                <div class="timeline-content">
                  <div class="card share full-width">
                    <div class="card-header clearfix">
                      <% @time_difference = Time.now - item.created_at %>
                      <% if @time_difference < 86400 %>
                        <h5><%= @user_info.last_name %> <%= @user_info.first_name %></h5>
                        <span class="small">Less than 1 day ago</span>
                      <% else %>
                      <% @day_difference = @time_difference / 86400 %>
                        <h5><%= @user_info.last_name %> <%= @user_info.first_name %></h5>
                        <% if(@day_difference.to_i > 1) %>
                        <span class="small"><%= @day_difference.to_i %> days ago</span>
                        <% else %>
                        <span class="small"><%= @day_difference.to_i %> day ago</span>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="card-description"> 
                      <p><%= raw(item.log_content) %></p>             
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </section>
        </div>
      </div>
      <div class="col-lg-5 col-md-5 col-sm-5">
        <h4 class="semi-bold">Alignment</h4>
        <ul class="treeview">
          <li>
            <button class="leaf-point" title="<%= @user_info.first_name %>">
              <%= @user_shortform %>
            </button>
            <span class="description semi-bold">
              <%= @company_objective.objective %>
            </span>

            <ul>
              <% @company_key_results.each do |item| %>
              <% ckr_user_info = User.find(item.user_id) %>
              <% ckr_user_shortform = Shortform.get_string_shortform(ckr_user_info.first_name) %>
              <li>
                <button class="leaf-point level-2" title="<%= ckr_user_info.first_name %>">
                  <%= ckr_user_shortform %>
                </button>
                <span class="description semi-bold">
                  <%= item.key_result %>
                </span>
              </li>
              <% end %>
            </ul>
          </li>
        </ul>
        <br/>
        <h4 class="semi-bold">Progress over time</h4>
        <br/>
        <div id="graph_progress_overtime" style="overflow: hidden;">
          <div id="timeline-progress-ring"></div>
        </div>
      </div>
    </div>
  </div>
</div>