<div class="container">
    <div class="row">
        <ul class="breadcrumb">
          <li><a href="/app/dashboard">Dashboard</a></li>
          <li>Company OKR</li>
        </ul>
    </div>
    <div class="row">
        <h2>Create Team Key Result</h2>

        <%= form_for @team_key_result do |f| %>
          <% if @team_key_result.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(team_key_result.errors.count, "error") %> prohibited this team_key_result from being saved:</h2>      

              <ul>
              <% team_key_result.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>     

          <div class="form-group">
            <%= f.label :key_result %><br />
            <%= f.text_field :key_result, autofocus: true, class: "form-control" %>
          </div>        

          <!--User Related team objective alignment-->
          <!--Load user related team first-->
          <% @user = User.where(id: current_user.id) %>
          <% team_array = @user[0].okr_teams.all.map { |team| [team.name, team.id] }%>
          <div class="form-group">
            <%= f.label :team %><br />
            <%= select("team", "team_id", team_array, {}, {class: 'form-control'}) %>
          </div>

          <!--Load all the objective of the particular team-->
          <div class="form-group">
            <%= f.label :team_objective_alignment %><br />
            <select id="team_objective_id" name="team_objective[id]" class="form-control">
            </select>
          </div>               

          <div class="form-group">
            <div class="text-right">
              <%= f.submit "Submit", class: "btn btn-primary"%>
            </div>
          </div>
        <% end %>       

        <%= link_to 'Back', team_key_results_path %>
    </div>
</div>

<script src="/dist/team_key_result-webpack.js"></script>







