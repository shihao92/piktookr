<div class="container">
<p id="notice"><%= notice %></p>

<h1>Team Key Results</h1>

<table>
  <thead>
    <tr>
      <th>Key Result</th>
      <th>Progress</th>
      <th>Team Objective Aligned</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @team_key_results.each do |team_key_result| %>
      <tr>
        <td><%=team_key_result.key_result%></td>
        <td><%=team_key_result.progress%></td>
        <td><%=team_key_result.team_objective.objective%></td>
        <td><%= link_to 'Show', team_key_result %></td>
        <td><%= link_to 'Edit', edit_team_key_result_path(team_key_result) %></td>
        <td><%= button_to 'Destroy', team_key_result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<table>
  <thead>
    <tr>
      <th>Log for Team Key Result</th>
    </tr>
  </thead>

  <tbody>
    <% @logs = LogTeamKeyResult.all %>
    <% @logs.each do |item| %>
      <tr>
        <td><%= raw(item.log_content) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Team Key Result', new_team_key_result_path %>
</div>