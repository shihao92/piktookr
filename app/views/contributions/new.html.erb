<div class="container">
<h4>What had been done to contribute towards the progress increment?</h4>
<%= form_for @contribution do |f| %>
  <% if @contribution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contribution.errors.count, "error") %> prohibited this contribution from being saved:</h2>       

      <ul>
      <% @contribution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>     

  <div class="form-group">
    <% @personal_objectives = PersonalObjective.where(user_id: current_user.id) %>
    <% @personal_kr_array = [] %>
    <% @personal_objectives.each do |item| %>
      <% @personal_key_results_temp = PersonalKeyResult.where(personal_objective_id: item.id).map { |kr| [kr.key_result, kr.id] } %>
      <% @personal_kr_array = @personal_kr_array + @personal_key_results_temp %>   
    <% end %>
    <%= f.label :select_personal_key_result %><br />
    <%= select("personal_key_result", "kr_id", @personal_kr_array, {}, {class: 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= f.label :contribution %><br />
    <%= f.text_field :contribution_comment, autofocus: true, class: "form-control" %>
  </div>    

  <div class="form-group">
    <div class="text-right">
      <%= f.submit "Submit", class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
<%= link_to 'Back', contributions_path %>
</div>