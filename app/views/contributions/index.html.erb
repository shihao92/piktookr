<p id="notice"><%= notice %></p>

<h1>Contributions</h1>

<table>
  <thead>
    <tr>
      <th>Contribution</th>
      <th>Link to(Personal Key Result)</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @contributions.each do |contribution| %>
      <tr>
        <td><%= contribution.contribution_comment %></td>
        <td>
          <% @personal_key_result = PersonalKeyResult.where(id: contribution.personal_key_result_id) %>
          <%= @personal_key_result[0].key_result %>
        </td>
        <td><%= link_to 'Show', contribution %></td>
        <td><%= link_to 'Edit', edit_contribution_path(contribution) %></td>
        <td><%= button_to 'Destroy', contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contribution', new_contribution_path %>
